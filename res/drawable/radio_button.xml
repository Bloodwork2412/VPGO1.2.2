<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="?attr/onEdgeTop" />
            <solid android:color="?attr/colorEdgeBottom" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="?attr/onEdgeTop" />
            <solid android:color="?attr/colorEdgeBottom" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="?attr/colorEdgeBottom" />
            <solid android:color="?attr/colorEdgeBottom" />
        </shape>
    </item>
</selector>